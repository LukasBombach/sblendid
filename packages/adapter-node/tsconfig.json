{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./types/"
    ]
  }
}
